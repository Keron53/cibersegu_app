[DEFAULT]
# Configuraci√≥n general
bantime = 300
findtime = 300
maxretry = 3
banaction = iptables-allports
backend = auto

# Jail simple para login fallido - 3 intentos = 5 minutos de baneo
[nginx-login-failed]
enabled = true
port = http,https
filter = nginx-login-failed
logpath = /var/log/nginx/access.log
maxretry = 3
findtime = 300
bantime = 300 